<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#19203e"
    android:padding="16dp">

    <!-- Combo Image -->
    <ImageView
        android:id="@+id/comboImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/black"
        android:layout_weight="0"
        android:src="@drawable/corn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/comboTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMBO SOLO"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Combo Description -->
        <TextView
            android:id="@+id/comboDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Bắp Ngọt 60oz + 1 Coke 32oz"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Combo Price -->
        <TextView
            android:id="@+id/comboPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="84,000 VND"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Decrease Button -->
            <Button
                android:id="@+id/buttonDecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@android:color/darker_gray"
                android:paddingHorizontal="0dp"
                android:text="-"
                app:cornerRadius="8dp" />

            <!-- Quantity Display -->
            <TextView
                android:id="@+id/quantityText"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <!-- Increase Button -->
            <Button
                android:id="@+id/buttonIncrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@android:color/darker_gray"
                android:paddingHorizontal="0dp"
                android:text="+"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
