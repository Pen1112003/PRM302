<!-- activity_main.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#19203e"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".HallActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: Back, Logo, History, SignOut -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/arrow_back" />
            </LinearLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnHistory"
                    android:layout_width="24dp"
                    android:src="@drawable/history"
                    android:layout_marginEnd="12dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:id="@+id/btnSignOut"
                    android:layout_width="24dp"
                    android:src="@drawable/sign_out"
                    android:layout_height="24dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Hall Title -->
        <TextView
            android:id="@+id/hallTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="CHỌN GHẾ - RẠP 01"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <!-- Show Time -->
        <TextView
            android:id="@+id/showTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:text="Ngày chiếu: ..."
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/hallTitle" />

        <!-- Seat RecyclerView -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/showTime">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/seatRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </HorizontalScrollView>

        <!-- Seat Type Legend -->
        <LinearLayout
            android:id="@+id/seatTypeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView" />

        <!-- Food & Beverage Title -->
        <TextView
            android:id="@+id/fabTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CHỌN BẮP NƯỚC"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/seatTypeContainer" />

        <!-- Choose Food Button -->
        <Button
            android:id="@+id/btnChooseFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#f3ea28"
            android:text="CHỌN ĐỒ ĂN"
            android:textColor="#663399"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fabTitle" />

        <!-- Order Summary Section -->
        <LinearLayout
            android:id="@+id/orderSummaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#2A345C"
            android:visibility="gone" 
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/btnChooseFood">

            <TextView
                android:id="@+id/selectedFoodTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:text="- 2x Bắp rang bơ phô mai\n- 1x Pepsi" />

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:textColor="#f3ea28"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Tổng: 255,000 VNĐ" />
        </LinearLayout>

        <!-- Order Button -->
        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#f3ea28"
            android:text="ĐẶT VÉ"
            android:textColor="#663399"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderSummaryLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
